<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App01_ConsultarCEP"
             x:Class="App01_ConsultarCEP.MainPage">

    <StackLayout BackgroundColor="#FFBF00" Padding="30" Spacing="30">

        <Image Source="logo.png"></Image>

        <Entry Placeholder="Digite um CEP" PlaceholderColor="Black" BackgroundColor="#FFBF00" x:Name="CEP"></Entry>
        <Button Text="BUSCAR CEP" TextColor="White" BackgroundColor="#00416B" x:Name="Botao"></Button>
        
        <Label Text="" x:Name="Resultado"
           VerticalOptions="Center" 
           HorizontalOptions="Center" />
        
        
    </StackLayout>


</ContentPage>
